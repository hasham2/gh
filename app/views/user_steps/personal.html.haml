%h1 Enter info
= form_for @user,url: wizard_path ,:class=>"form-horizontal center" do |f|
  
  .form-group.col-sm-12
    = f.label :first_name, 'FirstName' ,:class=>"col-sm-2 control-label text-right"
    .col-sm-4
      = f.text_field :first_name, :class=>"form-control"
  .form-group.col-sm-12
    = f.label :last_name, 'LastName' ,:class=>"col-sm-2 control-label text-right"
    .col-sm-4
      = f.text_field :last_name, :class=>"form-control" 
  .form-group.col-sm-12
    = f.label :phone_primary, 'Phone(primary)' ,:class=>"col-sm-2 control-label text-right"
    .col-sm-4
      = f.text_field :phone_secondary, :class=>"form-control"
  .form-group.col-sm-12
    = f.label :phone_secondary, 'Phone(secondary)' ,:class=>"col-sm-2 control-label text-right"
    .col-sm-4
      = f.text_field :birth_year, :class=>"form-control"
  .form-group.col-sm-12
    = f.label :birth_year, 'Birth_year' ,:class=>"col-sm-2 control-label text-right"
    .col-sm-4
      = f.text_field :birth_year, :class=>"form-control"
  .form-group.col-sm-12
    = f.label :gender, 'Gender' ,:class=>"col-sm-2 control-label text-right"
    .col-sm-4
      = f.text_field :gender, :class=>"form-control"
  .form-group.col-sm-12
    = f.label :skillset, 'SkillSet' ,:class=>"col-sm-2 control-label text-right"
    .col-sm-4
      = f.text_field :skillset, :class=>"form-control"
  .form-group.col-sm-12
    = f.label :criminal_convictions, 'CriminalConvictions' ,:class=>"col-sm-2 control-label text-right"
    .col-sm-4
      = f.text_field :criminal_convictions, :class=>"form-control"
  .form-group.col-sm-12
    = f.label :driver_licence, 'DriversLicence' ,:class=>"col-sm-2 control-label text-right"
    .col-sm-4
      = f.text_field :driver_licence, :class=>"form-control"
  .form-group.col-sm-12
    = f.label :licence_class, 'LicenceClass' ,:class=>"col-sm-2 control-label text-right"
    .col-sm-4
      = f.text_field :licence_class, :class=>"form-control"
  .form-group.col-sm-12
    = f.label :has_vehicle, 'HasVehicle' ,:class=>"col-sm-2 control-label text-right"
    .col-sm-4
      = f.text_field :has_vehicle, :class=>"form-control"
  .form-group.col-sm-12
    = f.label :car_pool, 'CarPool' ,:class=>"col-sm-2 control-label text-right"
    .col-sm-4
      = f.text_field :car_pool, :class=>"form-control"

  = f.submit "continue",id:"set",:class=>"btn btn-primary reset"