%h1 Location
= form_for Location.new,id:"myForm",:class=>"form-horizontal center",remote: true do |f|
  .form-group.col-sm-12
    = f.label :address, 'Address' ,:class=>"col-sm-2 control-label text-right"
    .col-sm-4
      = f.text_field :address, :class=>"form-control"
  .form-group.col-sm-12
    = f.label :city, 'City' ,:class=>"col-sm-2 control-label text-right"
    .col-sm-4
      = f.text_field :city, :class=>"form-control"
  
  .form-group.col-sm-12
    = f.label :state, 'state' ,:class=>"col-sm-2 control-label text-right"
    .col-sm-4
      = f.text_field :state, :class=>"form-control"
  
  .form-group.col-sm-12
    = f.label :zip, 'Zip' ,:class=>"col-sm-2 control-label text-right"
    .col-sm-4
      = f.text_field :zip, :class=>"form-control"
  
  .form-group.col-sm-12
    = f.label :country, 'Country' ,:class=>"col-sm-2 control-label text-right"
    .col-sm-4
      = f.text_field :country, :class=>"form-control"
  
  .form-group.col-sm-12
    = f.label :approx_only, 'Approximate_only' ,:class=>"col-sm-2 control-label text-right"
    .col-sm-4
      = f.text_field :approx_only, :class=>"form-control"
  .form-group.col-sm-12
    = f.label :lat, 'Latitude' ,:class=>"col-sm-2 control-label text-right"
    .col-sm-4
      = f.text_field :lat, :class=>"form-control"
  .form-group.col-sm-12
    = f.label :lng, 'Logitute' ,:class=>"col-sm-2 control-label text-right"
    .col-sm-4
      = f.text_field :lng, :class=>"form-control"
      %br
  .form-group.col-sm-12
    .col-sm-offset-2.col-sm-10
      = f.submit "create certification",id:"set",:class=>"btn btn-primary reset"
      