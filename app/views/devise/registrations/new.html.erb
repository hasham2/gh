<div class="container">
  <div class="row">
    <div class="col-lg-4 col-xs-offset-4">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
      <div class="login-box">

        <h4>Sign up</h4>
        <%= devise_error_messages! %>
        <div class="username">

          <h2 class="pull-left"><%= f.label :name , 'Username' %></h2>

          <div class="col-lg-12">
            <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
          </div>
          
           <h2 class="pull-left"><%= f.label :email %></h2>
          
          <div class="col-lg-12">
            <%= f.email_field :email, class: 'form-control' %>
          </div>
          
           <h2 class="pull-left"><%= f.label :password %></h2>
          
          <div class="col-lg-12">
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          
          
           <h2 class="pull-left"><%= f.label :password_confirmation %></h2>
          
          <div class="col-lg-12">
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
          
          
           <h2 class="pull-left"><%= f.label :role, 'Signup As' %></h2>
          
          <div class="col-lg-12">
            <%= f.select :role, options_for_select(User.roles.reject{|k,v| v == 2}.keys, "employer"),  {}, class: 'form-control' %>
          </div>
          
          <div class="col-lg-12">
            <%= f.submit 'Sign up', :class => 'btn btn-success pull-right login-button' %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <!--/row--> 
  
</div>