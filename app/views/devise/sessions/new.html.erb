<div class="container">
  <div class="row">
<div class="lgin_top">
    <div class="main login-box">     
      <h3>Log in</h3>
      <%= devise_error_messages! %>
      <div class="row">
        <div class="col-xs-6">
          <% if devise_mapping.omniauthable? %>
            <% resource_class.omniauth_providers.each do |provider| %>
              <%= link_to omniauth_authorize_path(resource_name, provider) do %>
                <%= image_tag('/assets/sigin-facebook-button.png' , :class=>"center-block")   %>
              <% end -%>
            <% end -%>
          <% end -%> 
        </div>
        
      </div>
      <div class="login-or">
        <hr class="hr-or">
        <span class="span-or">or</span>
      </div>
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
        <div class="form-group">
           <%- if devise_mapping.registerable? %>
             <%= link_to 'Sign up', new_registration_path(resource_name), class: 'pull-right'  %>
           <% end -%>
          <%= f.label :login, 'Username or Email' %>
          <%= f.text_field :login, :autofocus => true, class: 'form-control', :id=>"inputUsernameEmail" %>
        </div>
        <div class="form-group">
          <%- if devise_mapping.recoverable? %>
            <%= link_to "Forgot password?", new_password_path(resource_name), class: 'pull-right' %>
            <% end -%>
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' , :id=>"inputPassword" %>
        </div>
        <div class="checkbox pull-right">
              <%= f.check_box :remember_me %> <%= f.label :remember_me %>
        </div>

        <%= f.submit 'Log in', :class => 'btn btn btn-primary btn-success' %>
    </div>
    <% end %>
    </div>
  </div>
</div>