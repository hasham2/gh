<div class="container">
  <div class="row">
<div class="lgin_top">
    <div class="main login-box">
    <h3>Forgot your password?</h3>
    <p>We'll send password reset instructions.</p>
      <%= devise_error_messages! %>
      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form'}) do |f| %>
        <div class="form-group">
      
          <%= f.label :login, 'Email' %>
          <%= f.email_field :login, :autofocus => true, class: 'form-control' %>
        </div>
        

        <%= f.submit 'Reset Password', :class => 'btn btn btn-primary btn-success' %>
      <% end %>
    
    </div>
    </div>
  </div>
</div>